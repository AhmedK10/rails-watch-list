<div class="banner-img container-fluid d-flex justify-content-center align-items-center">
  <div>
    <h1>Your Own Movie Lists!</h1>
  </div>
</div>

<div class = "container-fluid  pb-3">
  <div class="cotainerr d-flex justify-content-between align-items-center pt-3">
    <h2>My Lists</h2>
    <%= link_to "Create a List", new_list_path, class: "btn btn-primary text-decoration-none"%>
  </div>

  <div class="grid">
    <%# <% image_filenames = ['micky-background.jpg', 'elsa-background.jpg', 'winnie-background.jpg'] %>
    <%# <% shuffled_images = image_filenames.shuffle %>
    <% @lists.each_with_index do |list, i| %>
      <div class="card">
        <%= link_to list_path(list), class:"text-decoration-none" do %>
          <div class="card-img" data-aos="zoom-in" style="background-image: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.1)), url(<%= asset_path('micky-background.jpg') %>)">
            <%= list.name %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
