<div class="banner-img mb-4 d-flex justify-content-center align-items-center">
  <div>
    <h1>Your Own Movie Lists!</h1>
  </div>
</div>

<div class="container">
  <div class="d-flex justify-content-between align-items-center">
    <h2>My Lists</h2>
    <%= link_to "Create a List", new_list_path, class: "btn btn-primary text-decoration-none"%>
  </div>

  <div class="container">
    <ol>
    <%@lists.each do |list|%>
      <li><%= link_to list.name, list_path(list) %></li>
    <%end%>
    </ol>
  </div>

</div>
